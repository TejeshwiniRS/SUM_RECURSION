#include <stdio.h>

int sum(int num)

{
    
    if(num==0)
    
    {
        
        return 0;
    
    }
    
    return (num%10 + sum(num/10));   
    
}

int main()

{
   
    int n,res;
    
    printf("Enter the number to be added: ");
    
    scanf("%d",&n);
    
    res=sum(n);
    
    printf("The sum of the given no.(%d) is %d",n ,res);

    return 0;
}
